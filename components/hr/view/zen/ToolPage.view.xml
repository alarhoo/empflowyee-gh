<mvc:View
	controllerName="com.alarhoo.empflowyee.components.hr.controller.zen.ToolPage"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0">
	<tnt:ToolPage id="idHRToolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button
					id="idHRSideNavigationToggleButton"
					class="sapUiTinyMarginEnd"
					icon="sap-icon://menu2"
					type="Transparent"
					press=".onSideNavButtonPress"
					tooltip="{i18n>collpaseMenuButtonText}">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow" />
					</layoutData>
				</Button>
				<Title text="zenployee" />
				<ToolbarSpacer />
				<Button
					class="sapUiTinyMarginEnd"
					icon="sap-icon://nav-back"
					press="onNavBack" />
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation
				selectedKey="{side>/selectedKey}"
				itemSelect="onSideNavigationItemSelect">
				<tnt:NavigationList items="{
					path: 'side>/navigation',
					templateShareable: false
				}">
					<tnt:NavigationListItem
						text="{
							path: 'side>titleI18nKey',
							formatter: '.getBundleText'
						}"
						icon="{side>icon}"
						expanded="{side>expanded}"
						items="{
							path: 'side>items',
							templateShareable: false
						}"
						key="{side>key}">
						<tnt:NavigationListItem
							text="{
								path: 'side>titleI18nKey',
								formatter: '.getBundleText'
							}"
							key="{side>key}" />
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList items="{
						path: 'side>/fixedNavigation',
						templateShareable: false
					}">
						<tnt:NavigationListItem
							text="{
								path: 'side>titleI18nKey',
								formatter: '.getBundleText'
							}"
							icon="{side>icon}"
							key="{side>key}"
							href="#/{side>key}" />
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="idHRToolPageControlID" />
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
