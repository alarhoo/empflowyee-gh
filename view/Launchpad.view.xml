<mvc:View
	controllerName="com.alarhoo.empflowyee.controller.Launchpad"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:cssgrid="sap.ui.layout.cssgrid"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0">
	<IconTabBar
		id="idIconTabBar"
		headerMode="Inline"
		stretchContentHeight="true"
		backgroundDesign="Transparent"
		items="{
			path: 'launchpad>/groups',
			templateShareable: false
		}">
		<items>
			<IconTabFilter
				icon="{launchpad>icon}"
				text="{launchpad>title}"
				key="{launchpad>route}">
				<customData>
					<core:CustomData
						key="route"
						value="{launchpad>route}" />
					<core:CustomData
						key="componentTarget"
						value="{launchpad>componentTarget}" />
				</customData>
				<ScrollContainer
					height="100%"
					width="100%"
					horizontal="false"
					vertical="true"
					class="sapUiSmallMarginBegin flowUiNoMarginBottom">
					<f:GridList
						id="gridList"
						class="sapUiSmallMarginBegin flowUiMediumPaddingTop flowUiMediumPaddingBottom"
						items="{
							path: 'launchpad>tiles',
							sorter: {
								path: 'subgroup',
								descending: false,
								group: true
							},
							templateShareable: false
						}">
						<f:customLayout>
							<cssgrid:GridBasicLayout
								gridTemplateColumns="repeat(auto-fill, minmax(5rem, 1fr)
									)"
								gridGap="1rem" />
						</f:customLayout>
						<f:GridListItem>
							<GenericTile
								header="{launchpad>title}"
								subheader="{launchpad>info}"
								width="100%"
								press=".onTilePress">
								<tileContent>
									<TileContent>
										<content>
											<NumericContent
												withMargin="false"
												icon="{launchpad>icon}"
												value="{kpivalue}"
												valueColor="{color}"
												indicator="{trend}"
												scale="{scale}" />
										</content>
									</TileContent>
								</tileContent>
							</GenericTile>
							<f:layoutData>
								<cssgrid:GridItemLayoutData
									gridRow="span 2"
									gridColumn="span 2" />
							</f:layoutData>
						</f:GridListItem>
					</f:GridList>
				</ScrollContainer>
			</IconTabFilter>
		</items>
	</IconTabBar>
</mvc:View>
